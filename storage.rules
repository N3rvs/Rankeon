rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Rule for user avatars
    // Allow a user to read/write to their own avatar folder.
    match /avatars/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for team images (avatar and banner)
    // Allow write only if the user is the founder of the team.
    // We get the team document from Firestore to check the founder's UID.
    match /teams/{teamId}/{allPaths=**} {
      allow read; // Allow public reads for team images
      allow write: if request.auth != null 
                    && get(/databases/$(database)/documents/teams/$(teamId)).data.founder == request.auth.uid;
    }
  }
}
