rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own profile
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Rules for conversations
    match /conversations/{conversationId} {
      // User can read/update a conversation only if they are a participant
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participantIds;
      // User can create a conversation if they are listed as a participant in the new conversation
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participantIds;

      // Rules for messages within a conversation
      match /messages/{messageId} {
        // User can read/write messages only if they are a participant of the parent conversation
        allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
      }
    }
  }
}
