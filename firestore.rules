rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    match /conversations/{conversationId} {
      // A user can read/update a conversation they are a part of.
      // The `list` (query) is secured by the client-side query which MUST
      // include `where('participantIds', 'array-contains', request.auth.uid)`.
      allow read, update: if request.auth.uid in resource.data.participantIds;

      // A user can create a conversation if they are one of the participants.
      allow create: if request.auth.uid in request.resource.data.participantIds;

      match /messages/{messageId} {
        // A user can read messages in a conversation they are a part of.
        allow read: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;

        // A user can create a message if they are a participant in the conversation
        // and they are the sender of the message.
        allow create: if request.auth.uid == request.resource.data.senderId &&
                       request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
      }
    }
  }
}
